<mujoco model="satellite">
  <compiler angle="degree" coordinate="local" inertiafromgeom="true"/>
  <option integrator="RK4" timestep="0.01"/>
  <default>
    <joint armature="0" damping="0" limited="false"/>
    <geom conaffinity="0" condim="3" density="500" friction="1 0.5 0.5" margin="0" material="geom" rgba="0.8 0.6 0.4 1"/>
  </default>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1=".3 .5 .7" rgb2="0 0 0" width="32" height="32"/>
    <texture name="grid" type="2d" builtin="checker" rgb1=".1 .2 .3" rgb2=".2 .3 .4" width="512" height="512" mark="edge" markrgb=".8 .8 .8"/>
    <material name="grid" texture="grid" texrepeat="20 20" texuniform="true" reflectance=".2"/>
  </asset>

  <worldbody>
    <geom name="floor" size="10 10 .05" type="plane" material="grid" pos="0 0 -2.0"/>
    <light cutoff="100" diffuse="1 1 1" dir="-0 0 -1.3" directional="true" exponent="1" pos="0 0 1.3" specular="0.1 0.1 0.1"/>
    <body name="satellite" pos="0 0 0">
      <camera name="track" mode="track" pos="0 -3 0.3" xyaxes="1 0 0 0 0 1"/>
      <joint name="root" type="free" pos="0 0 0"/>
      <geom name="satellite_geom" type="sphere" size="0.25" mass="1"/>
      <geom name="thruster1" type="cylinder" pos="0 0 0.25" zaxis="0 0 1" size="0.05 0.01" rgba="1 0 0 1"/>
      <geom name="thruster2" type="cylinder" pos="0 0 -0.25" zaxis="0 0 -1" size="0.05 0.01" rgba="1 0 0 1"/>
      <geom name="thruster3" type="cylinder" pos="0 0.25 0" zaxis="0 1 0" size="0.05 0.01" rgba="0 1 0 1"/>
      <geom name="thruster4" type="cylinder" pos="0 -0.25 0" zaxis="0 -1 0" size="0.05 0.01" rgba="0 1 0 1"/>
      <geom name="thruster5" type="cylinder" pos="0.25 0 0" zaxis="1 0 0" size="0.05 0.01" rgba="0 0 1 1"/>
      <geom name="thruster6" type="cylinder" pos="-0.25 0 0" zaxis="-1 0 0" size="0.05 0.01" rgba="0 0 1 1"/>
      <geom name="thruster7" type="cylinder" pos="0.1768 0.1768 0" zaxis="0.707 0.707 0" size="0.05 0.01" rgba="1 1 0 1"/>
      <geom name="thruster8" type="cylinder" pos="-0.1768 -0.1768 0" zaxis="-0.707 -0.707 0" size="0.05 0.01" rgba="1 1 0 1"/>
    </body>
  </worldbody>
  <actuator>
    <motor name="thruster1" joint="root" ctrlrange="0 1" gear="1 0 0 0 0 10"/>
    <motor name="thruster2" joint="root" ctrlrange="0 1" gear="1 0 0 0 0 -10"/>
    <motor name="thruster3" joint="root" ctrlrange="0 1" gear="1 0 0 0 10 0"/>
    <motor name="thruster4" joint="root" ctrlrange="0 1" gear="1 0 0 0 -10 0"/>
    <motor name="thruster5" joint="root" ctrlrange="0 1" gear="1 0 0 10 0 0"/>
    <motor name="thruster6" joint="root" ctrlrange="0 1" gear="1 0 0 -10 0 0"/>
    <motor name="thruster7" joint="root" ctrlrange="0 1" gear="1 0 0 7.07 7.07 0"/>
    <motor name="thruster8" joint="root" ctrlrange="0 1" gear="1 0 0 -7.07 -7.07 0"/>
  </actuator>
</mujoco>